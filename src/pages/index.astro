---
import "../styles/global.css";
import Friend from "../components/Friends.astro";
import Button88x31 from "../components/Buttons.astro";
import NixStore from "../components/NixStore.astro";
import CenteredBody from "../components/CenteredBody.astro";
import { Image } from "astro:assets";
import minky from "../assets/god.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/png"
