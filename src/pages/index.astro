    border-radius: 15px;
    border: 2px solid #f5c2e7;
    background-color: #1e1e2e;
    padding: 10px;
  }

  .friends {
    margin-top: 30px;
    border-radius: 15px;
    border: 2px solid #f5c2e7;
    background-color: #1e1e2e;
    padding: 10px;
  }

  .buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .minky {
    margin-top: 30px;
    border-radius: 15px;
    border: 2px solid #f5c2e7;
    background-color: #1e1e2e;
    padding: 10px;
