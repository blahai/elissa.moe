---
import nixPaths from "../data/paths.txt?raw";
const paths = nixPaths.split("\n").filter(Boolean);
---

<style>
  body {
    position: relative;
    margin: 0;
    min-height: 100vh;
    background: #11111b;
  }

  .nix-store {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.3;
    overflow: hidden;
    font-family: monospace;
    font-size: 1rem;
    line-height: 1.5;
    color: #bac2de;
    padding: -20;
    word-break: break-all;
  }

  .scroll-container {
    animation: scroll 300s linear infinite;
    min-height: 200vh;
  }

  @keyframes scroll {
    from {
      transform: translateY(0%);
    }
    to {
      transform: translateY(-100%);
    }
  }
</style>

<div class="nix-store">
  <div class="scroll-container">
    {paths.join(" ")}
  </div>
</div>
