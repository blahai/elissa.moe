---
export interface Props {
  name: string;
  url: string;
  source?: "cobu";
}
// Thanks to Vee for this whole thing :D
const { name, url, source } = Astro.props;

const AVATAR_BASE =
  source === "cobu" ? "https://codeberg.org" : "https://github.com";
---

<a href={url}>
  <img title={name + "'s site"} src={`${AVATAR_BASE}/${name}.png?size=256`} />
</a>

<style>
  img {
    height: 64px;
    width: 64px;
    border-radius: 50%;

    transition: 0.2s scale;
  }

  a {
    text-decoration: none;

    &:is(:hover, :focus) img {
      scale: 1.05;
    }
  }
</style>
